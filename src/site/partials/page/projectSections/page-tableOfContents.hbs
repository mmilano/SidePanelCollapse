{{!--
**********
page component
Table of Contents, aka
navigation within the page content

generate the table of contents sub-section and the anchor links to sections within the page

intended to be used as the generating helper

@param
{array} contents: list of the sections of the page that should appear in the navigation

**********
--}}

{{#if contents}}

<nav id="tableOfContents" title="Table of Contents">

    {{#each contents}}
    <div class="nav-item">
        <a class="nav-link {{~#if @first}} active{{/if}}" href="./#{{this.anchor}}" data-target="#{{this.anchor}}">{{{titleCase this.title}}}</a>
        {{#if subsections}}
            <div class="subnav">
            {{#each subsections}}
                <div class="nav-item">
                <a class="nav-link" href="./#{{this.anchor}}" data-target="#{{this.anchor}}">{{{titleCase this.title}}}</a>
                </div>
            {{/each}}
            </div>
        {{/if}}
    </div>
    {{/each}}

</nav>

{{/if}}